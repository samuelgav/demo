<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<bean id="placeholderConfigBaseDatos"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:/opt/app/evento/db/configuracion/database.properties
				</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>
	
	<!-- PROPIEDADES GENERALES -->
	<bean id="placeholderConfigSistema"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>file:/opt/app/notificacion/general/sunafil_conf_general.properties</value>
				<value>file:/opt/app/notificacion/mensaje/sunafil_mensajes.properties</value>
			</list>
		</property>
		<property name="ignoreUnresolvablePlaceholders" value="true" />
	</bean>
<!-- PROPIEDADES GENERALES
	 <bean id="dsAccidente" class="org.springframework.jndi.JndiObjectFactoryBean"> 
		<property name="jndiName" value="java:jboss/datasources/DSNOTIACCIDENTE" /> 
	 </bean> -->
	 
	 <bean id="dsAccidente"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="tmAccidente"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dsAccidente" />
		<qualifier value="Evensys" />
	</bean>

	<bean id="ssfAccidente" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dsAccidente" />
		<property name="configLocation" value="WEB-INF/config/mybatis/mybatis-config.xml" />
		<property name="mapperLocations"
			value="classpath*:pe/gob/sunafil/notiaccidente/dao/sistema/**/mapper/*.xml" />
	</bean>

	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="pe.gob.sunafil.notiaccidente.dao.sistema" />
		<property name="sqlSessionFactoryBeanName" value="ssfAccidente" />
	</bean>

</beans>